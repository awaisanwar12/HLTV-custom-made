{
  "extends": "./tsconfig.json",
  "exclude": ["__tests__", "node_modules"],
  "compilerOptions": {
    "outDir": "./lib",
    "rootDir": "./src",
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"]
}
